{
  "name": "wordle-game",
  "type": "module",
  "dependencies": {
    "cors": "^2.8.5",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "mongoose": "^8.13.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@testing-library/react": "^16.2.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-esm-transformer": "^1.0.0"
  },
  "scripts": {
    "start": "concurrently \"npm run start-frontend\" \"npm run start-backend\"",
    "start-backend": "cross-env NODE_ENV=production node src/backend/server.js",
    "start-frontend": "cd client && npm start",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config=jest.config.js",
    "install": "npm install --legacy-peer-deps && npm run install-client",
    "install-client": "cd client && npm install"
  }
}
